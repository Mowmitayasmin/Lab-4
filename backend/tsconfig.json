{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./node_modules/@types", "./node_modules/@prisma"]
    // "typeRoots": ["./node_modules/@types", "./node_modules/@prisma"]
  },
  "exclude": ["node_modules"],
}
